<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Original image" />

            <ImageView
                android:id="@+id/imageOrig"
                android:layout_width="match_parent"
                android:layout_height="331dp"
                android:src="@drawable/container" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Watermark in 1st bit plane" />

            <ImageView
                android:id="@+id/image1bit"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:src="@drawable/container" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Watermark in 8th bit plane" />

            <ImageView
                android:id="@+id/image8bit"
                android:layout_width="match_parent"
                android:layout_height="315dp"
                android:src="@drawable/container" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="After removing watermark" />

            <ImageView
                android:id="@+id/imageNoWM"
                android:layout_width="match_parent"
                android:layout_height="303dp"
                android:src="@drawable/container" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>