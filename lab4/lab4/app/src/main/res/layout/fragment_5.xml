<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Default" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonBlur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Blur" />

                    <Button
                        android:id="@+id/buttonClear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Clear" />

                    <Button
                        android:id="@+id/buttonReduceNoise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reduce noise" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonErosion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Erosion" />

                    <Button
                        android:id="@+id/buttonLighten"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lighten" />

                    <Button
                        android:id="@+id/buttonSobel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sobel operator" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/image_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/intel" />
    </LinearLayout>
</FrameLayout>